{
	"name": "@lukebennett/web",
	"private": true,
	"type": "module",
	"scripts": {
		"astro": "astro",
		"build": "astro build",
		"check": "pnpm exec prettier 'src/**/*.astro' --cache --check && pnpm biome check && pnpm run check:types",
		"check:format": "pnpm exec prettier 'src/**/*.astro' --cache --check && pnpm biome format",
		"check:lint": "pnpm biome lint",
		"check:types": "tsc --noEmit",
		"clean": "pnpm clean:outputs && rm -rf node_modules",
		"clean:outputs": "rm -rf .astro .turbo tsconfig.tsbuildinfo",
		"dev": "astro dev --host 127.0.0.1",
		"fix": "pnpm biome check --write",
		"fix:format": "pnpm exec prettier 'src/**/*.astro' --cache --write && pnpm biome format --write",
		"fix:lint": "pnpm biome lint --write",
		"lint": "pnpm biome lint --write"
	},
	"dependencies": {
		"@astrojs/markdoc": "^0.15.8",
		"@astrojs/netlify": "^6.6.0",
		"@astrojs/react": "^4.4.0",
		"@astrojs/rss": "^4.0.13",
		"@astrojs/sitemap": "^3.6.0",
		"@fontsource-variable/source-code-pro": "^5.2.7",
		"@fontsource-variable/source-sans-3": "^5.2.9",
		"@fontsource-variable/source-serif-4": "^5.2.9",
		"@keystatic/astro": "^5.0.6",
		"@keystatic/core": "^0.5.48",
		"@sindresorhus/slugify": "^3.0.0",
		"@tailwindcss/vite": "^4.1.16",
		"@unpic/react": "^1.0.1",
		"astro": "^5.15.1",
		"clsx": "^2.1.1",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"shiki": "^3.13.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.16",
		"tiny-invariant": "^1.3.3"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@lukebennett/tsconfig": "workspace:^",
